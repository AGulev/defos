name: "defos"

platforms:
  x86_64-osx:
    context:
        frameworks: ["AppKit"]
        
  x86-osx:
    context:
        frameworks: ["AppKit"]

  x86_64-linux:
    context:      
        frameworks: ["X11", "Xrender"]
        libs: ["Xrender", "Xfixes"]

  x86_64-win32:
    context:
        use-clang: true

  x86-win32:
    context:
        use-clang: true
